<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D3D3D3">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginLeft="50dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </View>
        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:text="15123123123"
            android:id="@+id/TVtimeTV"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="hntecology.ecology.activities.MainActivity"
                android:layout_weight="1" />
            <View
                android:id="@+id/drawer_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:layout_weight="1"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/white"
                    android:alpha="0.6">
                    <TextView
                        android:id="@+id/zoomTV"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="15.6"
                        android:textColor="#333333"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/white"
                    android:alpha="0.6">
                    <TextView
                        android:id="@+id/resetTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="새로고침"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"/>
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


                <RelativeLayout
                    android:id="@+id/transparentRL"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/white"
                    android:alpha="0.6">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/transparentTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="투명도 조절"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/delPointRL"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/white"
                    android:alpha="0.6">
                    <TextView
                        android:id="@+id/delPointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="포인트 취소"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/splitRL"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/white"
                    android:alpha="0.6">
                    <TextView
                        android:id="@+id/splitTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="도형 분리"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/unionRL"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/white"
                    android:alpha="0.6">
                    <TextView
                        android:id="@+id/unionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="도형 합치기"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>
            <SeekBar
                android:id="@+id/seekbarSB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:visibility="gone"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:background="#D3D3D3">

                <Button
                    android:id="@+id/btn_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="레이어"/>

                <Button
                    android:id="@+id/btn_gps_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="좌표 지정"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_satellite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위성 지도" />

                <Button
                    android:id="@+id/btn_biotope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비오톱 추가" />



                <Button
                    android:id="@+id/btn_birds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="야생조류 추가" />

                <Button
                    android:id="@+id/btn_Reptilia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="양서ㆍ파충류 추가" />

                <Button
                    android:id="@+id/btn_mammalia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="포유류 추가" />

                <Button
                    android:id="@+id/btn_fish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="어류 추가" />

                <Button
                    android:id="@+id/btn_insect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="곤충 추가" />

                <Button
                    android:id="@+id/btn_flora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="식물 추가" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_zoobenthos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저서무척추동물 추가"/>


                <Button
                    android:id="@+id/btn_mygps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 위치로 이동" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/exportBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export" />

                <Button
                    android:id="@+id/trackingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tracking 켜기"/>

                <Button
                    android:id="@+id/mytrackingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이동경로 보기"
                    />

                <Button
                    android:visibility="gone"
                    android:id="@+id/markerdeleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="마커 삭제" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/polygondeleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비오톱 삭제" />

                <Button
                    android:id="@+id/btn_clear_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="화면 지우기" />

                <Button
                    android:id="@+id/searchaddressBT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주소 찾기"/>

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>