<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:gravity="center">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/imageIV"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="4dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="5dip"
            app:sriv_right_top_corner_radius="5dip"
            app:sriv_left_bottom_corner_radius="5dip"
            app:sriv_right_bottom_corner_radius="5dip"
            android:background="#00000000"/>

        <LinearLayout
            android:id="@+id/cPeopleLikeRL"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/delIV"
                android:onClick="clickMethod"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/btn_del"/>
            <ImageView
                android:id="@+id/del2IV"
                android:onClick="clickMethod2"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/btn_del"
                android:visibility="gone"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>